<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/clearNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear last notification (by ID)" />

    <Button
        android:id="@+id/clearAllNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear all notifications" />

    <Button
        android:id="@+id/basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="basic notification" />

    <Button
        android:id="@+id/bigText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="big text notification" />


</LinearLayout>